body
  background #f1f1f1
  font-family Helvetica, "Hiragino Kaku Gothic", sans-serif
  color #333333

#root
  width 80%
  text-align center
  margin 0 10%

.main, .header
  text-align left
  width 90%
  margin 0 auto

label, textarea
  background white
  width 100%
  padding 2%
  display block
  min-height 5em
  font-size 1em
  outline none
  border none

  &:focus
    border 1px solid #bce09f

ul
  padding 0
  li
    list-style-type none
